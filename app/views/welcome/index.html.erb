<div class="row">
  <div class="col-xs-12 col-md-12 col-lg-12">

  <h1>Album Index</h1>

  <%= form_tag(:root, method: "get") do %>
    <%= label_tag(:song, "Song:") %>
    <%= text_field_tag(:song) %>

    <%= label_tag(:album, "Album:") %>
    <%= text_field_tag(:album) %>

    <%= label_tag(:artist, "Artist:") %>
    <%= text_field_tag(:artist) %>

    <%= submit_tag("Search", id: :search) %>
  <% end %>

  <br>
  <br>

  <table>
    <thead>
      <th>Song</th><th>Album</th><th>Artist</th>
    </thead>
    <tbody>
      <% if @results %>
        <% @results.each do |result| %>
          <tr>
            <td><%= result.title %></td>
            <td><%= result.album.title %></td>
            <td><%= result.artist.name %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  </div>
</div>
