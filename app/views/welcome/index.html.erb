<h1>Album Index</h1>
<br>
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
    <%= form_tag(:root, method: "get") do %>
      <%= label_tag(:song, "Song:") %>
      <%= text_field_tag(:song) %>

      <%= label_tag(:album, "Album:") %>
      <%= text_field_tag(:album) %>

      <%= label_tag(:artist, "Artist:") %>
      <%= text_field_tag(:artist) %>

      <%= submit_tag("Search", id: :search) %>
    <% end %>
  </div>
<br>
<br>
<br>

<div class="col-xs-4 col-md-4 col-lg-4 header">
  <p>Song</p>
</div>
<div class="col-xs-4 col-md-4 col-lg-4 header">
  <p>Album</p>
</div>
<div class="col-xs-4 col-md-4 col-lg-4 header">
  <p>Artist</p>
</div>

<% if @results %>
  <% @results.each do |result| %>
    <div class="col-xs-4 col-md-4 col-lg-4 results">
      <%= result.title %>
    </div>
    <div class="col-xs-4 col-md-4 col-lg-4 results">
      <%= result.album.title %>
    </div>
    <div class="col-xs-4 col-md-4 col-lg-4 results">
      <%= result.artist.name %>
    </div>
  <% end %>
<% end %>
</div>
